  "license": "MIT",

  "dependencies": {
  },

  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "webpack": "^1.12.13"
  },

  "javaDependencies": {
    "io.vertx:vertx-lang-js": "3.3.3",
    "io.vertx:vertx-web": "3.3.3"
  }
}
